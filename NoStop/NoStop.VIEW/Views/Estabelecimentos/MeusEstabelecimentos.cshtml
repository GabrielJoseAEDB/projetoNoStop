@model IEnumerable<NoStop.MODEL.ViewModels.EstabelecimentoCliente>

@{
    ViewBag.Title = "ExibirClientes";
}

<h2>Meus Estabelecimentos</h2>

<p>
    @if (Session["usuarioLogadoID"] != null && Session["Role"].ToString() == "admin")
    {
        @Html.ActionLink("Create New", "Create", new { @class = "btn btn-success" })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeEstabelecimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeEstabelecimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        <td>
            @if (Session["usuarioLogadoID"] != null && Session["Role"].ToString() == "admin")
            {
            @Html.ActionLink("Editar o estabelecimento", "Edit", new { id = item.idEstabelecimento }, new { @class = "btn btn-primary" }) <span> | </span>
            @Html.ActionLink("Editar acessos", "ExibirClientes", new { idEstab = item.idEstabelecimento }, new{@class = "btn btn-success"}) <span> | </span> 
            }
            @Html.ActionLink("Details", "Details", new { id = item.idEstabelecimento }, new { @class = "btn btn-info" }) <span> | </span> 
            @Html.ActionLink("Setores", "Index", "Setores", new { idEstab = item.idEstabelecimento }, new { @class = "btn btn-warning" }) 
        </td>
    </tr>
}

</table>
